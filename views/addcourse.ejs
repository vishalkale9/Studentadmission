<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script type="text/javascript">
        function validcourse() {
  const name = document.getElementById("nId").value.trim();
  const nameError = document.getElementById("CError");
  if (!/^[A-Za-z\s]+$/.test(name)) {
    nameError.textContent = "Course name must contain only letters and spaces.";
    return false;
  }
  nameError.textContent = "";
  return true;
}

function validateFormcourse() {
  const validName = validcourse();
 

  return validName;
}

 </script>
</head>
<body>
    <div class="container">
        <%- include('nav.ejs')%>
    <form name="frm" action="/save" method="post" style="margin-left: 60px;" onsubmit="return validateFormcourse()">
    <div class="form-group mt-5">
        <input type="text" class="form-control" name="name"  id="nId" placeholder="Enter Course name" style="width:300px; border: 1px solid black;" required  onkeyup="validcourse()">
         <small id="CError" style="color:red;"></small>
    </div>  
    
    <div class="form-group">
        <input type="submit" class="form-control" id="ns" value="Add Course" style="width:300px; border: 1px solid black;background-image: linear-gradient(to right,rgba(255,0,0,0),rgb(17, 122, 126));">
    </div> 
    
        <div class="alert alert-warning alert-dismissible fade show" role="alert" style="width:40%">
            <strong><%=msg%></strong>
            
          </div>
    
    </form>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
